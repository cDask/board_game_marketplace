<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<h1><%= @listing.board_game_name %></h1>
<p><%= @listing.description %></p>
<p>Price: <%= number_to_currency(@listing.price / 100.0) %></p>

<div class="show-image">  
    <%# if @listing.picture.attached? %>
        <div style="<%#= background_image(@listing) %>"></div>
    <%# else %>  
        <div class="backup-image"></div>
    <%# end %>
</div>

<div class="show-edit-delete">
  <% if current_profile && current_profile.id == @listing.profile_id %>
    <%= link_to "Edit", edit_listing_path(@listing.id) %>
    <%= link_to "Delete", listing_path(@listing.id), method: :delete %>
  <% end %>
  <% if user_signed_in? && @listing.completed == false && @listing.profile.id != current_profile.id %>
  <% end %>
  <%= link_to "Back", :back %>
</div>