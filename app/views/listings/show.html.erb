<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<h1><%= @listing.board_game_name %></h1>

<%= image_tag @listing.picture[0] if @listing.picture.attached? %>
<p><%= @listing.description %></p>
<%= form_with url:listing_transactions_path(@listing.id) do  |f| %>
<% if @listing.listing_type == 'Money' %>
  <% @listing.payments.each do |p| %>
    <%= f.label p.name %>
    <%= f.radio_button 'payment', p.name%>
  <% end %>
  <p>Price: <%= number_to_currency(@listing.price / 100.0) %></p>
<% else %>
  <p>Trade for: <%= @listing.board_game_trade %></p>
<% end %>

<div class="show-image">
    <%# if @listing.picture.attached? %>
        <div style="<%#= background_image(@listing) %>"></div>
    <%# else %>  
        <div class="backup-image"></div>
    <%# end %>
</div>

<div class="show-edit-delete">
  <% if user_signed_in? && current_profile && current_profile.id == @listing.profile_id %>
    <%= link_to "Edit", edit_listing_path(@listing.id) %>
    <%= link_to "Delete", listing_path(@listing.id), method: :delete %>
  <% end %>
  <% if @listing.completed == false && (!user_signed_in? || @listing.profile.id != current_profile.id) %>
    <%= f.submit @listing.listing_type == 'Money' ? 'Buy' : 'Trade'%>
  <% end %>
  <%= link_to "Back", :back %>
</div>
<% end %>