<h1><%= @profile.username %></h1>

<p>current rating: <%= @profile.rating %>

<%= render 'table', listings: @active_listings %>
<%= render 'table', listings: @past_listings %>
<table>
    <tr>
        <th>Board Game</th>
        <th>Seller</th>
        <th>Your Rating</th>
        <th>Actions</th>
    </tr>
    <% @transactions.each do |transaction| %>
    <tr>
        <td><%= transaction.listing.board_game_name %></td>
        <td><%= transaction.listing.profile.username %></td>
        <td><%= transaction.rating %></td>
        <td><%= link_to 'View', listing_transaction_path(transaction.listing.id)  %></td>
    </tr>
    <% end %>
</table>